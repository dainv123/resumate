# Database Configuration
DB_HOST=your-aws-postgres-host.amazonaws.com
DB_PORT=5432
DB_USERNAME=your-username
DB_PASSWORD=your-password
DB_DATABASE=resumate
DB_NAME=postgres

# Application Configuration
NODE_ENV=production
BACKEND_PORT=5001
FRONTEND_PORT=5000

# Domain Configuration (optional - defaults to IP if not set)
DOMAIN_NAME=daidev.click

# API URLs (auto-generated from DOMAIN_NAME or IP)
NEXT_PUBLIC_API_URL=http://daidev.click:5001
NEXT_PUBLIC_APP_URL=http://daidev.click:5000
FRONTEND_URL=http://daidev.click:5000

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://daidev.click:5001/auth/google/callback
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=7d

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=resumate-files

# Google AI Configuration
GOOGLE_AI_API_KEY=your-google-ai-api-key
GOOGLE_AI_MODEL=gemini-1.5-flash

# Redis Configuration (optional)
REDIS_HOST=localhost
REDIS_PORT=6379

# App Information
NEXT_PUBLIC_APP_NAME=Resumate
NEXT_PUBLIC_APP_VERSION=1.0.0